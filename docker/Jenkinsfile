#!/usr/bin/env groovy

pipeline {
	agent {
		docker {
			image '135.251.149.68:5000/mgw_build:latest'
			args '--rm  --privileged --cpus 6 -v /var/run/docker.sock:/var/run/docker.sock -v /var/run/libvirt/libvirt-sock:/var/run/libvirt/libvirt-sock -v /root/.ssh/:/root/.ssh/ -v /home/jenkins/:/home/jenkins/ -v /viewstores/third-party/:/viewstores/third-party/ -v /tmp/:/tmp/ -v /var/tmp/:/var/tmp/'
			label 'jnlp-docker01'

		}
	}
    stages {
        stage('Example') {
            steps {
                echo 'Hello World'
		sh '''
			yum install qemu-kvm libvirt virt-install libguestfs-tools -y
			if [$?] !=0 {
			echo "warning "
			}
		
		 '''
                script {
                    def browsers = ['chrome']
                    for (int i = 0; i < browsers.size(); ++i) {
                        echo "Testing the ${browsers[i]} browser"
		   }
                }
		sleep 100
            }
        }
    }
}